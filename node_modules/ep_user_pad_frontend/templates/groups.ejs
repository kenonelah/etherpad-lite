<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title lang="en">Etherpad</title>
		<link type="text/css" href="./static/plugins/ep_user_pad_frontend/static/css/styles.less" rel="stylesheet/less"/>
		<script src="./static/plugins/ep_user_pad_frontend/static/js/client/less.js" type="text/javascript"></script>
		<script src="./static/plugins/ep_user_pad_frontend/static/js/client/jquery.js" type="text/javascript"></script>
				<script src="./static/plugins/ep_user_pad_frontend/static/js/client/documentReadyRefresh.js" type="text/javascript"></script>
		<script src="./static/plugins/ep_user_pad_frontend/static/js/client/retina.js" type="text/javascript"></script>
		<script src="./static/plugins/ep_user_pad_frontend/static/js/client/etherpad.js" type="text/javascript"></script>
    </head>
    <body>
    	<div id="wrapper">
    		 <header>
    		 	<div class="inside">
    		 		<nav id="mainMenu">
	    		 		<ul>
	    		 			<li><a href="home.html" lang="en">Home</a></li>
	    		 			<li class="separator">|</li>
	    		 			<li><a href="pads.html" lang="en">Public Pads</a></li>
	    		 			<li class="separator">|</li>
	    		 			<li><span class="active" lang="en">My Groups</span></li>
	    		 			<li class="separator">|</li>
	    		 			<li><a href="help.html" lang="en">Help</a></li>
	    		 		</ul>
	    		 	</nav>
	    		 	<nav id="sekMenu">
	    		 		<ul>
    		 				<li><a lang="en" id="userProfile"><%= username %></a></li>
    		 				<li class="separator">|</li>
    		 				<li><a href="#" lang="en" id = "logout">Logout</a></li>
    		 			</ul>
	    		 	</nav>
    		 		<img src="./static/plugins/ep_user_pad_frontend/static/images/logo_tug_grey_white-01.png" alt="Etherpad" id="logo">  
    		 	</div>
    		 </header>
       		 <div id="main">
       		 	<div class="inside">
	       		 	<div class="leftArea">
	       		 		<div class="inputBlock">
		       		 		<div class="headline">
		       		 			<img src="./static/plugins/ep_user_pad_frontend/static/images/users-cyan-32.png" class="headlineImage" alt="Create Private Groups"></img><h1 lang="en">Create Private Group</h1>
		       		 		</div>
		       		 		<h4 lang="en">Create a new Private Group</h4>
		       		 		<form id="createPrivateGroupForm">
		       		 			<input type="text" placeholder="Group-Name" id="groupName" autocomplete="off"></input>
		       		 			<button type="submit" lang="en" id="createPrivateGroup">Create</button>
		       		 		</form>
		       		 	</div>
		       		 	<div class="inputBlock marginBottom">
		       		 		<div class="headline">
		       		 			<img src="./static/plugins/ep_user_pad_frontend/static/images/users-cyan-32.png" class="headlineImage" alt="Register"></img><h1 lang="en">Open Private Groups</h1>
		       		 		</div>
		       		 		<h4 lang="en">Manage your Groups</h4>
		       		 		<%if (groups.length > 0) {%> 
		       		 			<form style="margin-bottom:5px"><input  type="text" id="search" placeholder="Search"></input></form>
		       		 			<div class="tableview" style="height: 157px; overflow: hidden">
								<table>
		       		 				<% for(var i = 1; i <= groups.length; i++){%>
		       		 					<%if (i%2 == 1) {%>
		       		 						<tr class="odd visible" id="Gruppe<%= groups[i-1].groupID%>" data-role="<%= groups[i-1].Role%>">
		       		 							<td class="first"><a href="group.html/<%= groups[i-1].groupID%>"><%= groups[i-1].name%></a></td>
		       		 							<td class="role"><%if (groups[i-1].Role == 1) {%>Owner<%} else {%>User<%}%></td>
		       		 							<td title="User Management"><img data-groupid="<%=groups[i-1].groupID%>" src="./static/plugins/ep_user_pad_frontend/static/images/users-gold-16.png" class="groupDetails"></img></td>
		       		 							<%if (groups[i-1].Role == 1) {%>
		       		 								<td title="Delete Group" class="last"><img data-groupid="<%=groups[i-1].groupID%>" data-name="<%=groups[i-1].name%>" src="./static/plugins/ep_user_pad_frontend/static/images/close-red-16.png" class="delete"></img></td>
		       		 							<%} else {%>
		       		 								<td class="last"></td>
		       		 							<%}%>
		       		 						</tr>
		       		 					<%} else {%>
		       		 						<tr class="visible" id="Gruppe<%= groups[i-1].groupID%>" data-role="<%= groups[i-1].Role%>">
		       		 							<td class="first"><a href="group.html/<%= groups[i-1].groupID%>"><%= groups[i-1].name%></a></td>
		       		 							<td class="role"><%if (groups[i-1].Role == 1) {%>Owner<%} else {%>User<%}%> </td>
		       		 							<td title="User Management"><img data-groupid="<%=groups[i-1].groupID%>" src="./static/plugins/ep_user_pad_frontend/static/images/users-gold-16.png" class="groupDetails"></img></td>
		       		 							<%if (groups[i-1].Role == 1) {%>
		       		 								<td title="Delete Group" class="last"><img data-groupid="<%=groups[i-1].groupID%>" data-name="<%=groups[i-1].name%>" src="./static/plugins/ep_user_pad_frontend/static/images/close-red-16.png" class="delete"></img></td>
		       		 							<%} else {%>
		       		 								<td class="last"></td>
		       		 							<%}%>
		       		 						</tr>
		       		 					<%}%>
		       		 				<% } %>
								</table>
								</div>
								<div class="navigationInfo"><span id="previousPage"><<</span> <span id="currentPage"></span> to <span id="currentPageCount"></span> of <span id="pageCount"></span> Groups <span id="nextPage">>></span></div>
		       		 		<%} else {%>
		       		 			<h4 class="red" lang="en">You are in no Group at the moment.</h4>	
	       		 			<%}%>	
		       		 	</div>
	       		 	</div>
	       		 	<div class="rightArea">
	       		 		<img src="./static/plugins/ep_user_pad_frontend/static/images/pad-illustration-private.png" alt="Public Pads" class="padIllustration"></img>
	       		 	</div>
	       		 	<div style="clear: both"></div>
       		 	</div>
       		 </div>
       		 <footer>
       		 	<div class="inside">
       		 		<p lang="en"><a href="./imprint.html">Imprint</a></p>
       		 	</div>
       		 </footer>
       		<script>
    		$(document).ready(function(){
				$('#logout').click(function(e){
    				e.preventDefault();
    			    
    				var data = {};
    				var loc = document.location, port = loc.port == "" ? (loc.protocol == "https:" ? 443
    						: 80)
    						: loc.port, url = loc.protocol + "//"
    						+ loc.hostname + ":" + port + "/";
    				
    				data.location = url;
    				$.ajax({
    					type: 'POST',
    					data: JSON.stringify(data),
    					contentType: 'application/json',
    					url: url + 'logout',	
    					success: function(data) {
    						window.location = "../index.html";	
    					},
    					error: function (xhr, ajaxOptions, thrownError) {
    						console.log(thrownError);
    					}
    				});
				});
				
	   			$(".delete").click(function(){
	   				console.log('dfkld');
    				$("#wrapper").append('<div id="overlay"></div>');
    				$("#wrapper").append('<div id="lightBox"><div id="lightBoxHeader"><span'+
    						' class="close"><img src="./static/plugins/ep_user_pad_frontend/static/images/close-cyan-12.png"></span></div><div id="lightBoxMain"><div class='+
    						'"headline"><img src="./static/plugins/ep_user_pad_frontend/sta'+
    						'tic/images/close-red-32.png" class="headlineImage" alt="Delete'+
    						'"></img><h1 lang="en" class="red">Delete "'+$(this).data('name') +'"'+
    						'</h1></div><div class="content"><button id= "deleteGroup" data-name="'+ $(this).data('name')+'" data-groupid="'+$(this).data('groupid')+'" lang="en" class="margi'+
    						'nRight">Delete</button><button id="cancelDelete" lang="en">Cancel</button></div>'+
    						'</div></div>');
    				$("#lightBox").css("margin-top",-$("#lightBox").height()/2);

    			
    				$(".close").click(function(){
    					$("#overlay").remove();
    					$("#lightBox").remove();
    				});
    		   		$("#cancelDelete").click(function(){
    		   			console.log("clicked");
    		   			$("#overlay").remove();
    		   			$("#lightBox").remove();
    		   		});
    		   		
    		   	 	$("#deleteGroup").click(function(){
		 		  	    var data = {};
		 		  	    getBaseURL(1,function(baseurl){
	    		  			var loc = document.location;
	    		  			url = baseurl;
		 		  			data.groupId = $("#deleteGroup").data('groupid');
		 		  			data.groupName = $("#deleteGroup").data('name');

		 		  			$.ajax({
		 		  				type: 'POST',
		 		  				data: JSON.stringify(data),
		 		  				contentType: 'application/json',
		 		  				url: url + 'deleteGroup',	
		 		  				success: function(data) {
		 		  						if(data.success){
		 		  							window.location.href = loc;	
		 		  						}else{
		 		  							console.log(data.error);
		 		  						}	
		 		  				},
		 		  				error: function (xhr, ajaxOptions, thrownError) {
		 		  					console.log(thrownError);
		 		  				}
		 		  			});
	 		  	    	});
 		  	    	});
    			}); 
    		});
    	</script>
    	</div>
    </body>
</html>
